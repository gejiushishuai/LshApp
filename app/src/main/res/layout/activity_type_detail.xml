<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/et_type_detail_info"
        style="@style/Text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_editline"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>

    <TextView
        style="@style/Text_title2"
        android:layout_marginTop="10dp"
        android:text="描述:"
        android:textColor="@color/text_detail"/>

    <EditText
        android:id="@+id/et_type_detail_desc"
        style="@style/Text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/selector_editframe"
        android:gravity="top"
        android:lines="5"/>

    <TextView
        android:id="@+id/tv_type_detail_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_detail"
        tools:text="更新时间: 2017-05-06 13:38"/>

</LinearLayout>