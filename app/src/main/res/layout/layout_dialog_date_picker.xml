<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_margin="10dp"
    android:background="@color/bg_white"
    android:divider="@drawable/shape_devider_whitebg"
    android:orientation="vertical"
    android:showDividers="middle">

    <TextView
        android:id="@+id/tv_dialog_date_picker_title"
        style="@style/Text_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="9月13日"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <cn.carbswang.android.numberpickerview.library.NumberPickerView
                android:id="@+id/pv_dialog_date_picker_year"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:contentDescription="test_number_picker_view"
                app:npv_HintText="年"
                app:npv_ItemPaddingHorizontal="5dp"
                app:npv_ItemPaddingVertical="5dp"
                app:npv_RespondChangeOnDetached="false"
                app:npv_ShowCount="5"
                app:npv_TextSizeNormal="16sp"
                app:npv_TextSizeSelected="20sp"
                app:npv_WrapSelectorWheel="true"/>

            <cn.carbswang.android.numberpickerview.library.NumberPickerView
                android:id="@+id/pv_dialog_date_picker_month"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:contentDescription="test_number_picker_view"
                app:npv_HintText="月"
                app:npv_ItemPaddingHorizontal="5dp"
                app:npv_ItemPaddingVertical="5dp"
                app:npv_RespondChangeOnDetached="false"
                app:npv_ShowCount="5"
                app:npv_TextSizeNormal="16sp"
                app:npv_TextSizeSelected="20sp"
                app:npv_WrapSelectorWheel="true"/>

            <cn.carbswang.android.numberpickerview.library.NumberPickerView
                android:id="@+id/pv_dialog_date_picker_day"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:contentDescription="test_number_picker_view"
                app:npv_HintText="日"
                app:npv_ItemPaddingHorizontal="5dp"
                app:npv_ItemPaddingVertical="5dp"
                app:npv_RespondChangeOnDetached="false"
                app:npv_ShowCount="5"
                app:npv_TextSizeNormal="16sp"
                app:npv_TextSizeSelected="20sp"
                app:npv_WrapSelectorWheel="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/ll_dialog_date_picker_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    style="@style/Text_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="农历"/>

                <ImageView
                    android:id="@+id/iv_dialog_date_picker_type_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/selector_toggle"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_dialog_date_picker_year"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    style="@style/Text_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="输入年份"/>

                <ImageView
                    android:id="@+id/iv_dialog_date_picker_year_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/selector_toggle"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_normal_white"
        android:divider="@drawable/shape_devider_whitebg"
        android:showDividers="middle">

        <TextView
            android:id="@+id/tv_dialog_date_picker_cancel"
            style="@style/Text_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="取消"/>

        <TextView
            android:id="@+id/tv_dialog_date_picker_confirm"
            style="@style/Text_title2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="确定"
            android:textColor="@color/color_theme_dark_blue"/>

    </LinearLayout>

</LinearLayout>